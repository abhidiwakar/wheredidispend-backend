<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{title}}</title>
    <link rel='shortcut icon' href='/static-assets/logo.svg' type='image/svg' />
    {{#if description}}
      <meta name='description' content='{{description}}' />
    {{/if}}
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js'
      integrity='sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+'
      crossorigin='anonymous'
    ></script>
    <style>
      .screenshot { width: 100%; max-width: 300px; height: auto; }
    </style>
  </head>
  <body>
    <nav class='navbar bg-body-tertiary'>
      <div class='container-fluid'>
        <a class='navbar-brand' href='#'>
          <img
            src='/static-assets/logo.svg'
            alt='WhereDidISpend'
            width='30'
            height='24'
            class='d-inline-block align-text-top'
          />
          <span>+</span>
          <img
            src='/static-assets/whatsapp.svg'
            alt='Whatsapp'
            width='30'
            height='24'
            class='d-inline-block align-text-top'
          />
          WhereDidISpend on Whatsapp
        </a>
      </div>
    </nav>
    <main class='container py-3'>
      {{#if content}}
        {{{content}}}
      {{else}}
        <div class='alert alert-danger' role='alert'>
          <h4 class='alert-heading'>No Content</h4>
          There is no content to display on this page.
        </div>
      {{/if}}
    </main>
  </body>
</html>